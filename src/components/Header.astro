---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { Icon } from 'astro-icon/components'
---

<header>
	<nav>
		<h2><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Essays</HeaderLink>
			<HeaderLink href="/about">Projects</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://github.com/jom-hedges" target="_blank">
				<span class="sr-only">Follow on Github</span>
        <Icon name="mdi:github" />
			</a>
      <a href="https://https://bsky.app/profile/earshrub-magazine.bsky.social" target="_blank">
        <span class="sr-only">Follow on bsky</span>
        <Icon name="mdi:butterfly"
      </a>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: center;
    gap: 2rem;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}

  .internal-links{
    display: flex;
    justify-content: center;
    gap: 1rem;
    flex-grow: 1;
  }

	.social-links,
	.social-links a {
		display: flex;
    justify-content: flex-end;
    
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;

		}
	}
</style>
